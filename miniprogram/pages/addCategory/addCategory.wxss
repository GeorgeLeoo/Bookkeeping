/* miniprogram/pages/addCategory/addCategory.wxss */
@import "../../style/base.wxss";
page {
  background-color: #fff;
}
.header {
  padding: 10px 14px;
  border-bottom: 1px solid #ccc;
  position: sticky;
  top: 0;
  background-color: #fff;
}
.icon {
  width: 50px;
  height: 50px;
  border-radius: 100%;
}

.del-icon {
  width: 16px;
  height: 16px;
}

.footer {
  box-shadow: 0 -3px 10px rgb(230, 228, 228);
  padding: 14px 0;
  background-color: #f5f5f5;
}
.footer-text {
  color: #333;
  font-size: 14px;
  font-weight: bold;
}

.category-container {
  padding: 10px 14px;
  padding-bottom: 80px;
}

