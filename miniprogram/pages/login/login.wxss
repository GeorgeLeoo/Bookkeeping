/* miniprogram/pages/login/login.wxss */
.top {
  width: 100%;
  height: 222px;
  background: #FFC153;
}

.top-title {
  color: #fff;
  font-size: 22px;
  font-weight: bold;
}

.login-container {
  position: absolute;
  top: 130px;
  width: calc(100% - 60px);
}

.login {
    width: 315px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px 2px rgba(174, 174, 174, 0.3);
}

.hint {
  font-size: 14px;
  color: #999999;
}

.login-input {
  padding: 4px 0;
  line-height: 36px;
  border-bottom: 1px solid #BBBBBB;
  font-size: 16px;
  color: #464F5C;
  margin-top: 10px;
}

.wechat-login-text {
  font-size: 14px;
  color: #464F5C;
}

.footer {
  position: fixed;
  bottom: 20px;
  width: 100%;
  text-align: center;
}

.agreement {
  font-size: 12px;
  color: #BDBDBD;
}

@import "../../style/base.wxss";
