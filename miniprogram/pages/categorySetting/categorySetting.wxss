/* miniprogram/pages/categorySetting/categorySetting.wxss */
page {
  background-color: #fff;
}
.bottom {
  box-shadow: 0 -3px 10px rgb(230, 228, 228);
  padding: 14px 0;
  background-color: #f5f5f5;
}
.bottom-add-icon {
  width: 12px;
  height: 12px;
}

.bottom-add-text {
  color: #333;
  font-size: 14px;
  margin-left: 2px;
  font-weight: bold;
}

@import "../../style/base.wxss";

.del-icon {
  width: 16px;
  height: 16px;
}
.icon {
  width: 30px;
  height: 30px;
  margin: 0 14px;
}
.list {
  background: #f5f5f5;
  padding-top: 10px;
}
.item {
  background: #fff;
  height: 60px;
  padding: 0 20px;
}
.name {
  font-size: 14px;
  font-weight: normal;
}
.custom {
  color: rgb(184, 184, 184);
  font-weight: normal;
}
.tabs {
  position: sticky;
  top: 0;
}

.list-wrapper {
  padding-bottom: 100px;
}