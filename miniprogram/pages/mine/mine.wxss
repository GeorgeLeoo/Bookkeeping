/* miniprogram/pages/mine/mine.wxss */
.head {
  padding: 30px;
  padding-top: 0;
  padding-bottom: 40px;
}
.avatar {
  width: 60px;
  height: 60px;
  border-radius: 100%;
}

.nickname {
  margin-left: 16px;
  font-size: 20px;
  font-weight: bold;
  color: #333;
}
.punch-card {
  border-radius: 20px;
  background-color: aliceblue;
  padding: 4px 10px;
  color: #333;
}
.punch-card-icon {
  width: 40px;
  height: 40px;
}

.stat {
  margin-top: 20px;
}
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.stat-count {
  font-size: 26px;
  font-weight: bold;
}
.stat-text {
  font-size: 12px;
  color: #333;
  margin-top: 4px;
}

.content {
  padding: 0 20px;
  margin-top: -26px;
}

.card {
  background-color: #fff;
  padding: 10px 20px;
  border-radius: 8px;
  margin-bottom: 10px;
}

.card-title-text {
  font-size: 16px;
  font-weight: bold;
}

.card-sub-title-text {
  font-size: 12px;
  color: #BDBDBD;
}

.card-title-icon {
  width: 16px;
  height: 16px;
}

.card-body {}

.menu {}
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.menu-icon {
  width: 32px;
  height: 32px;
}
.menu-text {
  font-size: 12px;
  color: #333;
  margin-top: 4px;
}

.bill-left-month {
  font-size: 18px;
}

.bill-left-text {
  font-size: 12px;
}
.bill-right {
  padding: 0 20px;
}
.bill-right-item-text {
  font-size: 12px;
  color: #BDBDBD;
}
.bill-right-item-money {
  font-size: 14px;
  color: #333;
  margin-top: 4px;
}
.line {
  margin-top: 10px;
  height: 20px;
  width: 1px;
  background-color: #BDBDBD;
  margin-left: 20px;
}
@import "../../style/base.wxss";